#include <iostream>
#include <stack>
#include <string>
using namespace std;

string reverseString(string str) {
    stack<char> st;
    
    for (int i = 0; i < str.length(); i++) {
        st.push(str[i]);
    }
    
    string reversed = "";
    while (!st.empty()) {
        reversed += st.top();
        st.pop();
    }
    
    return reversed;
}

int main() {
    string input;
    cout << "Enter a string: ";
    cin >> input;
    
    string reversed = reverseString(input);
    cout << "Reversed string: " << reversed << endl;
    
    return 0;
}
